@{
    Layout = "";
}
@model Nop.Plugin.Payments.PagoEfectivo.Models.PaymentInfoModel
<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <label asp-for="DocumentTypes">@T("Plugins.Payments.PagoEfectivo.DocumentType"):</label>
        </td>
        <td>
            <select asp-for="DocumentType" asp-items="Model.DocumentTypes" class="dropdownlists"></select>
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="DocumentTypeValue">@T("Plugins.Payments.PagoEfectivo.DocumentTypeValue"):</label>
        </td>
        <td>
            <input type="text" asp-for="DocumentTypeValue" style="width:165px;" autocomplete="off" />
            <span asp-validation-for="DocumentTypeValue"></span>
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="PhoneNumber">@T("Plugins.Payments.PagoEfectivo.PhoneCode"):</label>
        </td>
        <td>
            <input type="text" asp-for="PhoneCode" style="width:165px;" autocomplete="off" />
            <span asp-validation-for="PhoneCode"></span>
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="PhoneNumber">@T("Plugins.Payments.PagoEfectivo.PhoneNumber"):</label>
        </td>
        <td>
            <input type="text" asp-for="PhoneNumber" style="width:165px;" autocomplete="off" />
            <span asp-validation-for="PhoneNumber"></span>
        </td>
    </tr>
</table>
<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <p><b>@T("Plugins.Payments.PagoEfectivo.RedirectionTip")</b></p>
        </td>
    </tr>
</table>