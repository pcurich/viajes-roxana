@model QuotaModel
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Payments.CustomQuota.Quota.Create").Text;
    NopHtml.SetActiveMenuItemSystemName(CustomQuotaDefaults.SystemName);
}

<form asp-controller="CustomQuota" asp-action="Create" method="post" id="quota-create-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Payments.CustomQuota.Quota.Create")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Payments.CustomQuota.Quota.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Misc.Payments/Views/Quota/_CreateOrUpdate.cshtml", Model)
</form>